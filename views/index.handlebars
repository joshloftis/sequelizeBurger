<div class="container">
  <div class="row">
    <div class="col s6 offset-m2 m4">
      <h3 class="center-align title-text">Eat-Da-> </h3>
    </div>
    <div class="col s6">
      <img id="burger-image" src='assets/img/Shack-Burger-PNG.png' alt='burger image'>
    </div>
  </div>
  <div class="row burgers-content z-depth-3 is-flex">
    <div class="col s12 m6 need-border">
      <div class="burger-title">
        <h5 class="center-align">Burgers to be Devoured</h5>
      </div>
      {{#each burger}}
        {{#unless devoured}}
          <div class="row">
            <div class="col s8">
              <span class="burger-name-span">
                {{this.id}}:
                {{this.burger_name}}
              </span>
            </div>
            <div class="col s4">
              <a class="waves-effect waves-green btn-flat change-btn devour-btn" data-id="{{id}}">Devour</a>
            </div>
          </div>
        {{/unless}}
      {{/each}}
    </div>
    <div class="col s12 m6">
      <div class="burger-title">
        <h5 class="center-align">Devoured Burgers</h5>
      </div>
      {{#each burger}}
        {{#if devoured}}
        <div class="row">
          <div class="col s8">
            <span class="burger-name-span">
              {{this.id}}:
              {{this.burger_name}}
            </span>
          </div>
          <div class="col s4">
            <a class="waves-effect waves-green btn-flat change-btn delete-btn" data-id="{{id}}">Delete</a>
          </div>
        </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <form id="add-burger-area" class="create-burger">
        <textarea id="text-area" class="z-depth-3" type="text" placeholder="Add a burger here..." maxlength="50"></textarea>
        <a id="add-burger" class="btn-floating btn-large waves-effect waves-light green right"><i class="material-icons">add</i></a>
      </form>
    </div>
</div>
